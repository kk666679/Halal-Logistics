{
  "name": "agent-orchestrator",
  "version": "1.0.0",
  "description": "Central orchestration system for Halal Logistics AI Agents",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "dev:watch": "nodemon src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "docker:build": "docker build -t halal-logistics/orchestrator .",
    "docker:run": "docker run -p 3011:3011 halal-logistics/orchestrator"
  },
  "dependencies": {
    "express": "^4.18.2",
    "kafkajs": "^2.2.4",
    "ioredis": "^5.4.1",
    "amqplib": "^0.10.3",
    "winston": "^3.11.0",
    "joi": "^17.11.0",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "uuid": "^9.0.1",
    "node-cron": "^3.0.3",
    "axios": "^1.6.2",
    "socket.io": "^4.7.4",
    "compression": "^1.7.4",
    "express-async-errors": "^3.1.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/express": "^4.17.21",
    "@types/amqplib": "^0.10.4",
    "@types/uuid": "^9.0.4",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/node-cron": "^3.0.6",
    "@types/socket.io": "^3.0.4",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "ts-jest": "^29.1.1",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.1",
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "ai-agents",
    "orchestrator",
    "kafka",
    "redis",
    "rabbitmq",
    "microservices",
    "halal-logistics"
  ],
  "author": "HalalChain Team",
  "license": "UNLICENSED"
}
